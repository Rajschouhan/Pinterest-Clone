<% include ./partials/header.ejs %>

<div class="w-full min-h-screen text-white bg-zinc-800 px-3 py-2">

    <h1>Create a New Post</h1>
    <hr class="opacity-10 mt-3"> 
  <form action="/createpost" method="post" enctype="multipart/form-data" class="mt-5 flex flex-col items-center ">
    <input type="file"  class="block w-1/3 py-2 " name="postimage"  >
    <input type="text " class="block w-1/3 px-3 border-2 mt-2 rounded-md" placeholder="Title" name="title" >
    <textarea  type="text " class="block w-1/3 px-3 border-2 mt-2 rounded-md" name="description" placeholder="description"  ></textarea>
    <input type="submit" class="block w-1/3 px-3 bg-red-700 mt-2 rounded-md" value="Create Post" >
  </form>


  </div>    



