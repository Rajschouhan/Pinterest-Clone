<% include partials/header.ejs %>

<div class="w-full min-h-screen bg-[#f5f5f5] px-10 py-8">

  <h1 class="text-2xl font-semibold text-gray-800 mb-8">
    Your Saved Pins
  </h1>

  <div class="columns-1 sm:columns-2 md:columns-3 lg:columns-4 gap-6">

    <% user.savedPosts.forEach(post => { %>
      <div class="mb-6 break-inside-avoid">

        <div class="bg-white rounded-xl overflow-hidden shadow-md hover:shadow-xl transition-all duration-300">

          <!-- Image -->
          <a href="/show/posts/<%= post._id %>">
            <img 
              src="/images/uploads/<%= post.img %>" 
              class="w-full object-cover hover:scale-[1.03] transition-transform duration-300"
            />
          </a>

          <!-- Content -->
          <div class="p-3">
            <h3 class="text-sm font-medium text-gray-800 truncate">
              <%= post.title %>
            </h3>
          </div>

        </div>

      </div>
    <% }) %>

  </div>

  <% if(user.savedPosts.length === 0) { %>
    <p class="text-center text-gray-500 mt-20">
      No saved pins yet ğŸ“Œ
    </p>
  <% } %>

</div>

