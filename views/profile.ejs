<% include ./partials/header.ejs %>
<!-- Tailwind CSS CDN -->
<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">

<div class="w-full min-h-screen bg-gray-50 p-4 sm:p-6 md:p-8">
    <!-- Profile Section -->
    <div class="max-w-4xl mx-auto bg-white rounded-2xl shadow-xl p-6 sm:p-8 mt-10 mb-16">
        <!-- Header -->
        <div class="text-center">
            <h1 class="text-3xl sm:text-4xl font-extrabold text-gray-900 tracking-tight">User Profile</h1>
            <p class="mt-2 text-base sm:text-lg text-gray-600">Welcome to your profile page!</p>
        </div>

        <!-- Profile Image -->
        <div class="flex justify-center mt-8">
            <div class="w-32 h-32 sm:w-40 sm:h-40 rounded-full overflow-hidden border-4 border-gray-200 shadow-lg transition-transform duration-200 hover:scale-105">
                <img
                    src="https://i.pinimg.com/736x/2a/c2/a9/2ac2a9d74c52702de8cd01c04f2c4ec4.jpg"
                    alt="Profile Picture"
                    class="w-full h-full object-cover"
                />
            </div>
        </div>

        <!-- User Info -->
        <div class="text-center mt-6">
            <h3 class="text-xl sm:text-2xl font-semibold text-gray-800">@<%= user.username %></h3>
            <p class="mt-2 text-sm sm:text-base text-gray-500 italic">Keep going to view beautiful pictures.</p>
            <p class="mt-2 text-sm sm:text-base text-gray-600">Pinterest - A book of HD pictures that are awesome.</p>
        </div>

        <!-- Upload Form -->
        <form
            action="/upload"
            method="post"
            enctype="multipart/form-data"
            class="mt-8 flex flex-col items-center gap-4 w-full max-w-md mx-auto"
        >
            <input
                type="file"
                name="file"
                class="block w-full max-w-xs text-sm text-gray-700 border border-gray-200 rounded-lg cursor-pointer bg-gray-50 focus:outline-none focus:ring-2 focus:ring-red-400 focus:border-transparent transition-all duration-200"
                required
            />
            <input
                type="text"
                name="filecaption"
                placeholder="Enter Caption"
                class="w-full max-w-xs px-4 py-2 text-sm border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-400 focus:border-transparent transition-all duration-200 text-gray-700 placeholder-gray-400"
                required
            />
            <div class="flex gap-4">
                <button
                    type="submit"
                    class="w-28 py-2 px-4 bg-red-500 text-white rounded-lg font-semibold hover:bg-red-600 focus:outline-none focus:ring-2 focus:ring-red-400 focus:ring-offset-2 transition-all duration-200"
                >
                    Upload
                </button>
                <a
                    href="/logout"
                    class="w-28 py-2 px-4 bg-gray-600 text-white rounded-lg font-semibold text-center hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 transition-all duration-200"
                >
                    Logout
                </a>
            </div>
        </form>

        <!-- Add Post Button -->
        <div class="flex justify-center mt-10">
            <button
                class="px-6 py-3 rounded-lg bg-gradient-to-r from-red-500 to-pink-600 text-white text-base sm:text-lg font-semibold shadow-lg hover:shadow-xl hover:scale-105 focus:outline-none focus:ring-2 focus:ring-red-400 focus:ring-offset-2 transition-all duration-200"
            >
                âž• Add Post
            </button>
        </div>
    </div>

    <!-- Posts Section -->
    <div class="w-full mx-auto mt-10 p-6  rounded-2xl shadow-xl">
        <h2 class="text-2XL font-bold text-gray-900 mb-6">Your Pins</h2>
        <div class="columns-1 sm:columns-2 md:columns-3 lg:columns-4 gap-6">
            <% user.posts.forEach(function(post) { %>
                <div class="break-inside-avoid mb-6">
                    <div class="rounded-lg overflow-hidden shadow-md hover:shadow-lg transition-shadow duration-200">
                        <img
                            src="/images/uploads/<%= post.img %>"
                            alt="<%= post.imgText %>"
                            class="w-full h-64 object-cover"
                        />
                        <div class="p-4">
                            <h5 class="text-lg font-semibold text-gray-800"><%= post.imgText %></h5>
                            <p class="text-sm text-gray-500 mt-1">28 pins</p>
                        </div>
                    </div>
                </div>
            <% }) %>
            <!-- Static Example Posts -->
            <div class="break-inside-avoid mb-6">
                <div class="rounded-lg overflow-hidden shadow-md hover:shadow-lg transition-shadow duration-200">
                    <img
                        src="https://images.pexels.com/photos/325044/pexels-photo-325044.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2"
                        alt="Pin"
                        class="w-full h-64 object-cover"
                    />
                    <div class="p-4">
                        <h5 class="text-lg font-semibold text-gray-800">All Pins</h5>
                        <p class="text-sm text-gray-500 mt-1">28 pins</p>
                    </div>
                </div>
            </div>
            <div class="break-inside-avoid mb-6">
                <div class="rounded-lg overflow-hidden shadow-md hover:shadow-lg transition-shadow duration-200">
                    <img
                        src="https://images.pexels.com/photos/8148434/pexels-photo-8148434.jpeg"
                        alt="Pin"
                        class="w-full h-64 object-cover"
                    />
                    <div class="p-4">
                        <h5 class="text-lg font-semibold text-gray-800">All Pins</h5>
                        <p class="text-sm text-gray-500 mt-1">28 pins</p>
                    </div>
                </div>
            </div>
            <div class="break-inside-avoid mb-6">
                <div class="rounded-lg overflow-hidden shadow-md hover:shadow-lg transition-shadow duration-200">
                    <img
                        src="https://images.pexels.com/photos/18831977/pexels-photo-18831977.jpeg"
                        alt="Pin"
                        class="w-full h-64 object-cover"
                    />
                    <div class="p-4">
                        <h5 class="text-lg font-semibold text-gray-800">All Pins</h5>
                        <p class="text-sm text-gray-500 mt-1">28 pins</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap JS (retained for compatibility, though not heavily used) -->
