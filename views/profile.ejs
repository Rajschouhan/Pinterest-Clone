<% include ./partials/header.ejs %>
    <div class=" w-full min-h-screen bg-gray-200 p-4 sm:p-6">   
    <div class="mt-20 mb-10 flex flex-col items-center text-center px-4">
  <!-- Header -->
  <h1 class="text-4xl font-bold text-gray-900">User Profile</h1>
  <p class="mt-2 text-gray-600">Welcome to your profile page!</p>

  <!-- Profile Image -->
  <div class="mt-8">
    <div class="w-40 h-40 rounded-full overflow-hidden border-4 border-gray-200 shadow-md">
      <img
        src="https://i.pinimg.com/736x/2a/c2/a9/2ac2a9d74c52702de8cd01c04f2c4ec4.jpg"
        alt="Profile Picture"
        class="w-full h-full object-cover"
      />
    </div>
  </div>

  <!-- User Info -->
  <h3 class="mt-4 text-xl font-semibold text-gray-800">@<%= user.username %></h3>
  <p class="mt-1 text-gray-500 italic">Keep going to view beautiful pictures.</p>
  <p class="mt-2 text-gray-600">Pinterest - A book of HD pictures that are awesome.</p>

  <!-- Upload Form -->
  <form
    action="/upload"
    method="post"
    enctype="multipart/form-data"
    class="mt-6 flex flex-col items-center gap-3 w-full max-w-sm"
  >
    <input
      type="file"
      name="file"
      class="block w-60  text-sm text-gray-700 border rounded-lg cursor-pointer bg-gray-50 focus:outline-none focus:ring-2 focus:ring-blue-500"
    />
    <input
      type="text"
      name="filecaption"
      placeholder="Enter Caption"
      class="w-60 px-4 py-2 text-sm border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
    />
    <button
      type="submit"
      class="w-24 py-2 px-4 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition"
    >
      Upload
    </button>
    <a
    href="/logout"
    class="mx-2  w-32 bg-red-400 hover:bg-red-600 text-white font-medium rounded-lg transition"
  >
    Logout
  </a>
  <button class="px-10 py-2 rounded-lg bg-red-700 text-sm font-semibold mt-10  ">Add Post</button>
  </form>
<br>
  <!-- Logout Button -->
  
</div>  
         
         

  
