<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link rel="stylesheet" href="/stylesheets/profile.css">
  </head>
  <body>
    <div class="main">   
    <div class="containerpers">
    <div class="cardpers">
      <div class="profile-picture">
        <img src="https://i.pinimg.com/736x/2a/c2/a9/2ac2a9d74c52702de8cd01c04f2c4ec4.jpg" alt="Profile Picture">
      </div>
      <h2 class="name"><%= user.username %> </h2>
      <h3 class="username">@<%= user.username %></h3>
      <p class="tagline">Keep going to View Beautifull Pictures.</p>
      <p class="description">Pinterest- A Book of HD Pictures that are Awsome.</p>
      <form action="/upload" method="post" enctype="multipart/form-data"    >
        <input type="file" name="file" >
        <input type="text" name="filecaption" placeholder="Enter Caption">
        <input type="submit">
      </form>
      <a href="/logout" class="button">Logout</a>
    </div>
</div>
<div class="container">
  <div class="cards flex">
    <% user.posts.forEach(function(post){ %>
        <div class="card" style="width: 10rem; margin: 10px;">
  <img src="/images/uploads/<%= post.img   %>" style="width: 12rem;  height: 15rem; " class="card-img-top" alt="...">
  <div class="card-body">
    <h5 class="card-title"><%= post.imgText %> </h5>
    
  </div>
</div>
   <% }) %>
  </div>
   

</div>
 </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
  </body>
</html>